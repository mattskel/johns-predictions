doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    div.menu-container
      h1 Johns predictions
      case baseUrl
        when '/login'
          a(href='/signup') signup
        default
          a(href='/login') logout

    block content
